<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/tickets/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div>
      <%= flight.airline %>
      <a href="/flights/<%= flight._id %>/edit">
        <button>Edit Flight</button>
      </a>
    </div>
    <div>airport: </div>
    <div><%= flight.airport %></div>
    <div>flightNo: </div>
    <div><%= flight.flightNo %></div>
    <div>Departure: </div>
    <div><%= flight.adjustedDate%></div>
  </section>

  <h2>Tickets</h2>
  <form 
    id="add-review-form"
    action="/flights/<%= flight._id %>/flights"
    method="POST"
  >
    <label for="content-textarea">Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?">
    <label for="price-input">Price:</label>
    <input type="text" name="price" id="price-input">

    <button type="submit">Add Ticket</button>
  </form>

	<% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
					<th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
						<td>
              <form action="/flights/<%= flight._id %>/flights/<%= ticket._id %>?_method=DELETE" method="POST">
                <button>X</button>
              </form>
            </td>
          </tr>
        <% }) %>
        <tr>
          <td colspan="2"></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>
</main>

<%- include('../partials/footer') %>